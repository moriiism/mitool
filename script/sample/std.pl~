#!/usr/bin/perl

#
# template script
#
# 2014.10.22  M.Morii
#

use strict;
use warnings;
use Cwd;
use File::Basename;
use File::Temp;
use File::Spec;
use POSIX;
use Getopt::Long;
no warnings qw(once);

$ENV{'LANG'} = "C";

my $mxkwpllib = sprintf("%s/script/mxkwpllib/mxkwpllib.pl",
			$ENV{'MXKWTOOL'});
require($mxkwpllib);
$mxkwpllib::sevar{'progname'} = "std.pl";

# main
{
    my $cmd;
    &SetSeVarLocal;
    GetOptions(\%mxkwpllib::sevar,
	       'help=i', 'verbose=i', 'debug=i',
	       'pfiles_dir=s', 'xselect_dir=s',
	       'dptclist=s', 'attlist=s',
	       'outflag=s', 'procdir=s',
	       'localvar0=s', 'localvar1=s') or &Usage();
    if(0 != $mxkwpllib::sevar{'help'}){
	&Usage();
    }
    if(-1 < $mxkwpllib::sevar{'verbose'}){
	printf("#--- %s: START ---#\n", $mxkwpllib::sevar{'progname'});
	if(0 < $mxkwpllib::sevar{'verbose'}){
	    &mxkwpllib::PrintEnv;
	    &mxkwpllib::PrintVar;
	}
	&mxkwpllib::PrintSeVar;
	&PrintSeVarLocal;
    }

    # -- argument
    my $NARG = 1;
    my($infile);  # relpath from $procdir or fullpath
    if(-1 < $mxkwpllib::sevar{'verbose'}){
	printf("# of arg = %d\n", $#ARGV + 1);
    }
    if( $#ARGV == $NARG - 1){
	my $iarg = 0;
	$infile    = $ARGV[$iarg]; $iarg ++;
    }else{
        printf("# of arg must be %d.\n", $NARG);
	&Usage();
    }
    my $prompt_arg = "arg";
    if(-1 < $mxkwpllib::sevar{'verbose'}){
	printf("%s: %s: infile  = %s\n",
	       $mxkwpllib::sevar{'progname'}, $prompt_arg,
	       $infile);
    }
    # == argument

    chdir($mxkwpllib::sevar{'procdir'});
    my $procdir_full = cwd;
    my $infile_full = File::Spec->rel2abs($infile, $procdir_full);
    #    my $infile_full_clean = Cwd::realpath($infile_full);

    if(-1 < $mxkwpllib::sevar{'verbose'}){
	printf("infile_full = %s\n", $infile_full);
    }

    # read file
    #    open(IN, "<$infile_full") or die "$!";
    # don't use 'die "$!"', because the error message is not English and
    # the standard error message "Died at ... line **." is not used.
    open(IN, "<$infile_full") or die;
    while(my $line = <IN>){
	chomp($line);

	# 1. skip blank line
	#    "\s" is "[ \n\r\f\t]".
	#    * is used for 0<=.
	# 2. skip comment line (#)
	# 3. skip comment line (!)
	if($line =~ /^\s*$/ or $line =~ /^\s*\#/ or $line =~ /^\s*\!/) {
	    next;
	}
	if(-1 < $mxkwpllib::sevar{'verbose'}){
	    printf("%s\n", $line);
	}
    }
    close(IN);

    if(-1 < $mxkwpllib::sevar{'verbose'}){
	printf("#=== %s: END ===#\n", $mxkwpllib::sevar{'progname'});
    }
} # main


sub Usage
{
    my $func_name = "Usage";
    if(-1 != $#_){
        printf("%s: %s: error.\n", $mxkwpllib::sevar{'progname'}, $func_name);
        die;
    }
    printf("usage: %s [--help=(0)] [--verbose=(0)] [--debug=(0)] " .
	   "[--pfiles_dir=(auto)] [--xselect_dir=(auto)] " .
	   "[--dptclist=(auto)] [--attlist=(auto)] " .
	   "[--outflag=(overwrite)] [--procdir=(.)] " .
	   
	   "[--localvar0=(aaa)] [--localvar1=(bbb)] " .
	   " -- " .
	   "infile\n",
	   $mxkwpllib::sevar{'progname'});
    exit;
}

sub SetSeVarLocal
{
    my $func_name = "SetSeVarLocal";
    $mxkwpllib::sevar{'localvar0'}  = "aaa";
    $mxkwpllib::sevar{'localvar1'}  = "bbb";
}

sub PrintSeVarLocal
{
    my $func_name = "PrintSeVarLocal";
    my $prompt_sevar = "sevar";

    printf("%s: %s: localvar0       = %s\n",
           $mxkwpllib::sevar{'progname'}, $prompt_sevar,
           $mxkwpllib::sevar{'localvar0'});
    printf("%s: %s: localvar1       = %s\n",
           $mxkwpllib::sevar{'progname'}, $prompt_sevar,
           $mxkwpllib::sevar{'localvar1'});
}
